  </head>
  <body>

      <div class="middleview">
            <h1>Edit Details</h1>
    <form action="/editsubmit/<%=items[0]._id%>" method="post">


        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input type="text" class="form-control" id="exampleInputName" name="exampleInputName" pattern="[A-Za-z0-9\s]+" aria-describedby="emailHelp" value="<%=items[0].name%>">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail1">Weight</label>
          <input type="number" class="form-control" id="exampleInputWeight" name="exampleInputWeight" pattern="[0-9]+" aria-describedby="emailHelp" value="<%=items[0].weight%>">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail1">Value</label>
          <input type="number" class="form-control" id="exampleInputValue" name="exampleInputValue" pattern="[0-9]+" aria-describedby="emailHelp" value="<%=items[0].val%>">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

        <a href="dhome.html"> <button class="btn btn-primary ">cancel</button></a>

    </form>


      </div>

